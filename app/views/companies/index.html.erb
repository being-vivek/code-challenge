<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
    <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
        <li class="list-group-item">
          <a href="<%= company_path(company) %>" class="list-group-item-action pull-left">
            <%= company.name %>
          </a>
          <%= link_to "Delete",
              company_path(company),
              method: :delete,
              class: 'float-right',
              data: {
                confirm: 'Are you sure, you want to delete?'
              }
          %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>
